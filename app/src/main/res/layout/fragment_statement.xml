<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="br.com.casalmoney.app.authenticated.viewModel.StatementViewModel" />

        <variable
            name="fragment"
            type="br.com.casalmoney.app.authenticated.view.fragments.StatementFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundColor"
        tools:context=".authenticated.view.activities.MainActivity">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/empty_state"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/empty_state_image"
            android:scaleType="centerInside" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>